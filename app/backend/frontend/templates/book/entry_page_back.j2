<div class="back" data-entry_id="{{ entry.id }}" id="p{{ entry.id }}b">
    {% if entry != None %}
        <div class="box-v entry-container">
            <div class="entry-element entry-topic"><h2>{{ entry.user.name }}</h2></div>
            <div class="entry-element box-h entry-header">
                <div class="spacer-h">Header Information (Name, age, etc.)<br>This entry has the id {{ entry.id }}</div>
                <div class="entry-header-image">
                    Image
                </div>
            </div>
                <div class="entry-element entry-canvas">
                <div class="entry-answer-question">Entry Canvas</div>

            </div>

            <div class="box-h control-element">
                <button hx-get="/book/entry/{{ entry.id }}/prev" hx-target="#page-root">Back</button>
                <div class="spacer-h"></div>
            </div>
        </div>
    {% else %}
        <div class="box-center">
            <div class="box-v">
                Entry not found. <br>
                <button  hx-get="/book/entry/0/next" hx-target="#page-root">Reset</button>
            </div>
        </div>
    {% endif %}
</div>